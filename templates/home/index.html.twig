{% extends 'base.html.twig' %}

{% block body %}
	<h1>Exercice pour Gaea21</h1>

	<div class="container">
		<table class="table table-hover table-dark text-center">
			<thead>
				<tr>
					<th scope="col">#</th>
					<th scope="col">Nom</th>
					<th scope="col">Prénom</th>
					<th scope="col">Email</th>
					<th scope="col">Adresse</th>
					<th scope="col">Téléphone</th>
					<th scope="col"></th>
				</tr>
			</thead>
			<tbody>
				{% for user in users %}
					<tr>
						<td>{{ user.id }}</td>
						<td>{{ user.lastName }}</td>
						<td>{{ user.firstName }}</td>
						<td>{{ user.email }}</td>
						<td>{{ user.address }}</td>
						<td>{{ user.phone }}</td>
						<td class="d-flex justify-content-end">
							<a class="btn btn-info me-3 mb-1" href="">
								<i class="bi bi-info-circle me-2"></i>Infos</a>
							<a class="btn btn-outline-danger" href="">
								<i class="bi bi-trash3 me-2"></i>Supprimer</a>
						</td>
					</tr>
				{% else %}
					<tr>
						<td colspan="5">Aucun utilisateur trouvé</td>
					</tr>
				{% endfor %}
			</tbody>
		</tr>
	</tbody>
</table></div>{% endblock %}
